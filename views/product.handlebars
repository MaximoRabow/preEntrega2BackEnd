<div><br /></div>
<div class='container'>
	<div class='row'>

		<div class='col-md-8'>
			<table class='table'>
				<thead>
					<tr>
						<th scope='col'>ID</th>
						<th scope='col'>First</th>
						<th scope='col'>Last</th>
						<th scope='col'>DNI</th>
						<th scope='col'>Year</th>
					</tr>
				</thead>
				<tbody>
					{{#each product}}
						<tr>
							<th scope='row'>{{this._id}}</th>
							<td>{{this.name}}</td>
							<td>{{this.categoria}}</td>
							<td>{{this.cantidad}}</td>
							<td>{{this.precio}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>

		<div class='col-md-4'>
			<h2>Agregar Producto</h2>
			<form action='/api/product' method='post'>
				<div class='row'>
					<div class='col-6'>
						<input
							type='text'
							class='form-control'
							placeholder='Nombre Producto'
							aria-label='Nombre Producto'
							name='name'
						/>
					</div>
					<div class='col-6'>
						<input
							type='text'
							class='form-control'
							placeholder='Categoria'
							aria-label='Categoria'
							name='categoria'
						/>
					</div>
					<div class='col-6'>
						<input
							type='text'
							class='form-control'
							placeholder='Cantidad'
							aria-label='Cantidad'
							name='cantidad'
						/>
					</div>
					<div class='col-6'>
						<input
							type='number'
							class='form-control'
							placeholder='Precio'
							aria-label='Precio'
							name='precio'
						/>
					</div>
					<div class='col-12'>
						<button type='submit' class='form-control'>
							Enviar Producto
						</button>
					</div>
				</div>
			</form>
		</div>

	</div>
</div>